<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_recuperar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvRecuperacaoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperação\nde Senha"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <EditText
        android:id="@+id/etEmailRecuperar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="EMAIL"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:background="@drawable/edittext_border_gradient"
        android:padding="12dp"
        android:layout_marginBottom="32dp"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btnEnviarRecuperacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nova senha"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_gradient" />

</LinearLayout>
